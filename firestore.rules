rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Hostels collection
    match /hostels/{hostelId} {
      // Anyone can read approved hostels OR admin can read all
      allow read: if resource.data.approved == true || 
                     (request.auth != null && request.auth.token.email == 'hello.unihostel@gmail.com');
      
      // ANYONE can create hostels (they go to pending approval)
      allow create: if true;
      
      // Only admin can update/delete/approve
      allow update, delete: if request.auth != null && 
                               request.auth.token.email == 'hello.unihostel@gmail.com';
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Users can read their own bookings, admin can read all
      allow read: if (request.auth != null && resource.data.userId == request.auth.uid) ||
                     (request.auth != null && request.auth.token.email == 'hello.unihostel@gmail.com');
      
      // Authenticated users can create bookings
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Only admin can update/delete bookings
      allow update, delete: if request.auth != null && 
                               request.auth.token.email == 'hello.unihostel@gmail.com';
    }
    
    // Universities collection
    match /universities/{universityId} {
      // Anyone can read universities
      allow read: if true;
      
      // Only admin can create/update/delete universities
      allow create, update, delete: if request.auth != null && 
                                       request.auth.token.email == 'hello.unihostel@gmail.com';
    }
    
    // Contact Messages collection
    match /contactMessages/{messageId} {
      // Only admin can read messages
      allow read: if request.auth != null && 
                     request.auth.token.email == 'hello.unihostel@gmail.com';
      
      // Anyone can create messages (contact form is public)
      allow create: if true;
      
      // Only admin can update/delete messages
      allow update, delete: if request.auth != null && 
                               request.auth.token.email == 'hello.unihostel@gmail.com';
    }
    
    // Student Verifications collection
    match /studentVerifications/{verificationId} {
      // Admin can read all verifications, users can read their own
      allow read: if (request.auth != null && resource.data.userId == request.auth.uid) ||
                     (request.auth != null && request.auth.token.email == 'hello.unihostel@gmail.com');
      
      // Authenticated users can create verifications for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Only admin can update/delete verifications
      allow update, delete: if request.auth != null && 
                               request.auth.token.email == 'hello.unihostel@gmail.com';
    }
    
    // Users collection
    match /users/{userId} {
      // Admin can read all users for analytics
      allow read: if request.auth != null && 
                     request.auth.token.email == 'hello.unihostel@gmail.com';
      // Users can create/update their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User Preferences collection
    match /userPreferences/{userId} {
      // Users can read and write their own preferences
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Ratings collection
    match /ratings/{ratingId} {
      // Anyone can read ratings
      allow read: if true;
      
      // Authenticated users can create ratings
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own ratings
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Only admin can delete ratings
      allow delete: if request.auth != null && 
                       request.auth.token.email == 'hello.unihostel@gmail.com';
    }
    
    // Wishlist collection
    match /wishlist/{wishlistId} {
      // Users can read their own wishlist, admin can read all
      allow read: if (request.auth != null && resource.data.userId == request.auth.uid) ||
                     (request.auth != null && request.auth.token.email == 'hello.unihostel@gmail.com');
      
      // Authenticated users can add to their own wishlist
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can delete from their own wishlist
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Only admin can update wishlist items
      allow update: if request.auth != null && 
                       request.auth.token.email == 'hello.unihostel@gmail.com';
    }
  }
}
